<% @PAGE_TITLE = "Edit Output: #{@output.code}" %>

<h1><%= @PAGE_TITLE %></h1>

<div class="alert">
  <strong>Warning!</strong> Editing a size or extension requires that AssetHost delete all rendered assets for this output. They 
  will be re-rendered on first request.
</div>

<%= simple_form_for @output, :as => :output, :url => a_output_path(@output), :html => {:class => "form-horizontal"} do |f| %>
  <fieldset>
    <legend>Output</legend>
    <%= f.input :code %>
    <%= f.input :size %>
    <%= f.input :extension %>
    <%= f.input :prerender %>
    <%= f.input :is_rich %>
    
    <div class="form-actions">
      <%= f.submit "Update Output", class: "btn btn-primary" %>
      <%= link_to "Cancel", a_output_path(@output), class: "btn" %>

      <%= link_to("Delete", a_output_path(@output), 
            class: "btn btn-danger pull-right", 
            method: :delete, 
            data: { confirm: "Click OK to delete this Output.\nClick CANCEL to return to editing." }
            ) %>
    </div>
  </fieldset>
<% end %>
