<li class="asset-list__spacer"></li>
<li class="asset-list__spacer"></li>
<li class="asset-list__spacer"></li>
<li class="asset-list__spacer"></li>

{{#if message}}
  <p class="asset-list__message">{{message}}</p>
{{/if}}

