<div class="container">
<%= form_tag sessions_path, id: "login" do %>
  <fieldset>
    <legend>Login</legend>
    <%= label_tag :username %>
    <%= text_field_tag :username, nil, autofocus: "autofocus" %>

    <%= label_tag "Password" %>
    <%= password_field_tag :password, nil, id: "password" %>
  </fieldset>
  
<%= submit_tag "Submit", class: "btn" %>
<% end %>
</div>
